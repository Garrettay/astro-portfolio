---
interface DevLogFrontmatter {
  title: string;
  date: string;
  tags: string[];
}

const { title, date, tags } =
  Astro.props.frontmatter as DevLogFrontmatter;
---

<article class="devlog-post">
  <header class="devlog-header">
    <h1>{title}</h1>

    <time datetime={date} class="devlog-date">
      {date}
    </time>

    <div class="devlog-tags">
      {tags.map(tag => (
        <span class="tag">{tag}</span>
      ))}
    </div>
  </header>

  <div class="devlog-body">
    <slot />
  </div>
</article>