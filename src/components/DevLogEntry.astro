---
const {
  title,
  date,
  content,
  image,
} = Astro.props;
---

<article class="devlog-entry">
  <header>
    <h2>{title}</h2>
    <time>{date}</time>
  </header>

  <div class="entry-body">
    <p>{content}</p>

    {image && (
      <img src={image} alt="" />
    )}
  </div>
</article>

<style>
  .devlog-entry {
    border: 1px solid #444;
    padding: 1.5rem;
    margin-bottom: 2rem;
    border-radius: 8px;
  }

  header {
    margin-bottom: 1rem;
  }

  time {
    font-size: 0.85rem;
    color: #aaa;
  }

  .entry-body img {
    margin-top: 1rem;
    max-width: 100%;
    border-radius: 4px;
  }
</style>